@model CarModel
	
<form method="post">
	<div class="border border-primary p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Створити Нову Категорію</h2>
			<hr />
		</div>
		<div class="mb-3 p-1">
			<label asp-for="Brand" class="p-0"></label>
			<input asp-for="Brand" class="form-control border-primary" />
			<span asp-validation-for="Brand" class="text-danger"></span>
		</div>
		<div class="mb-3 p-1">
			<label asp-for="Model" class="p-0"></label>
			<input asp-for="Model" class="form-control border-primary" />
			<span asp-validation-for="Model" class="text-danger"></span>
		</div>
		<div class="mb-3 p-1">
			<label asp-for="Year" class="p-0"></label>
			<input asp-for="Year" class="form-control border-primary" />
			<span asp-validation-for="Year" class="text-danger"></span>
		</div>
		<div class="mb-3 p-1">
			<label asp-for="DisplayOrder" class=" p-0"></label>
			<input asp-for="DisplayOrder" class="form-control border-primary" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">Створити</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="CarModel" asp-action="Index" class="btn btn-outline-secondary form-control">
					Назад до Списку Моделей
				</a>
			</div>
		</div>
	</div>
</form>
@section Scripts
{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}