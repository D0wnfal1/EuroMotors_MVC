@model Product
	
<form method="post">
	<div class="border border-primary p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Створити Новий Товар</h2>
			<hr />
		</div>
		<div class="mb-3 p-1">
			<label asp-for="Title" class="p-0"></label>
			<input asp-for="Title" class="form-control border-primary" />
			<span asp-validation-for="Title" class="text-danger"></span>
		</div>
		<div class="mb-3 p-1">
			<label asp-for="Desctiption" class=" p-0"></label>
			<textarea asp-for="Desctiption" class="form-control border-primary" ></textarea>
			<span asp-validation-for="Desctiption" class="text-danger"></span>
		</div>
		<div class="mb-3 p-1">
			<label asp-for="VendorCode" class=" p-0"></label>
			<input asp-for="VendorCode" class="form-control border-primary" />
			<span asp-validation-for="VendorCode" class="text-danger"></span>
		</div>
		<div class="mb-3 p-1">
			<label asp-for="Brand" class=" p-0"></label>
			<input asp-for="Brand" class="form-control border-primary" />
			<span asp-validation-for="Brand" class="text-danger"></span>
		</div>
		<div class="mb-3 p-1">
			<label asp-for="ListPrice" class=" p-0"></label>
			<input asp-for="ListPrice" type="number" class="form-control border-primary" />
			<span asp-validation-for="ListPrice" class="text-danger"></span>
		</div>
		<div class="mb-3 p-1">
			<label asp-for="Price" class=" p-0"></label>
			<input asp-for="Price" type="number" class="form-control border-primary" />
			<span asp-validation-for="Price"  class="text-danger"></span>
		</div>
		<div class="mb-3 p-1">
			<select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select p-0 border-primary p-2">
				<option disabled selected>--Оберіть Категорію</option>
			</select>
			<span asp-validation-for="CategoryId" class="text-danger"></span>
		</div>
		<div class="mb-3 p-1">
			<select asp-for="CarModelId" asp-items="ViewBag.CarModelList" class="form-select p-0 border-primary p-2">
				<option selected>--Оберіть Модель Авто (необов'язково)</option>
			</select>
			<span asp-validation-for="CarModelId" class="text-danger"></span>
		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">Створити</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">
					Назад до Списку Товарів
				</a>
			</div>
		</div>
	</div>
</form>
@section Scripts
{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}