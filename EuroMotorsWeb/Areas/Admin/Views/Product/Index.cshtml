@model List<Product>
<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h1 class="text-primary">
				Список Товарів
			</h1>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Product" asp-action="Create" class="btn btn-primary fs-4">
				<i class="bi bi-plus-square-fill"></i> Створити Нову Категорію
			</a>
		</div>
	</div>
	<table class="table table-bordered border-primary table-striped table-light ">
		<thead class="border-2">
			<tr>
				<th class="p-3 fs-5">
					Назва Товару
				</th>

				<th class="p-3 fs-5">
					Артикул
				</th>
				<th class="p-3 fs-5">
					Назва Бренду
				</th>
				<th class="p-3 fs-5">
					Ціна за Прейскуратном
				</th>
				<th class="p-3 fs-5">
					Ціна
				</th>
				<th class="p-3 fs-5">
					Категорія
				</th>
				<th class="p-3 fs-5">
					Модель Авто
				</th>
			</tr>
		</thead>
		<tbody class="border-2">
			@foreach (var obj in Model)
			{
				<tr>
					<td class="ps-3">
						@obj.Title
					</td>
					<td class="ps-3">
						@obj.VendorCode
					</td>
					<td class="ps-3">
						@obj.Brand
					</td>
					<td class="ps-3">
						@obj.ListPrice
					</td>
					<td class="ps-3">
						@obj.Price
					</td>
					<td class="ps-3">
					</td>
					<td class="ps-3">
					</td>
					<td>
						<div class="w-30 btn-group" role="group">
							<a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i> Змінити
							</a>
							<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
								<i class="bi bi-trash3-fill"></i> Видалити
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>