@model List<Product>
<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h1 class="text-primary">
				Список Товарів
			</h1>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Product" asp-action="Upsert" class="btn btn-primary fs-4">
				<i class="bi bi-plus-square-fill"></i> Створити Нову Категорію
			</a>
		</div>
	</div>
	<table  id="tblData" class="table table-bordered border-primary table-striped table-light" style="width:100%">
		<thead class="border-2 ">
			<tr>
				<th class="p-2 fs-6">
					Назва Товару
				</th>

				<th class="p-2 fs-6">
					Артикул
				</th>
				<th class="p-2 fs-6">
					Назва Бренду
				</th>
				<th class="p-2 fs-6">
					Ціна за Прейскуратном
				</th>
				<th class="p-2 fs-6">
					Ціна
				</th>
				<th class="p-2 fs-6">
					Категорія
				</th>
				<th class="p-2 fs-6">
					Модель Авто
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model)
			{
				<tr>
					<td>@obj.Title</td>
					<td>
						@obj.Brand
					</td>
					<td>
						@obj.VendorCode
					</td>
					<td>
						@obj.ListPrice
					</td>
					<td>
						@obj.Price
					</td>
					<td>
						@obj.Category.Name
					</td>
					<td>
						@obj.CarModel.Brand @obj.CarModel.Model @obj.CarModel.Year
					</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i> Edit
							</a>
							<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
								<i class="bi bi-trash-fill"></i> Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
		</table>
</div>
